{
  "manifest_version": 3,
  "name": "YouTube Video Notes",
  "version": "0.2.0",
  "description": "Generate McKinsey-style MECE notes from YouTube video transcripts using AI.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "notes-library.html",
        "icons/icon-16.png",
        "icons/icon-32.png",
        "icons/icon-48.png",
        "icons/icon-128.png"
      ],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
